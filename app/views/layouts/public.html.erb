<!DOCTYPE html>
<html>
  <head>
    <title>clientviews</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <script>
      window.clientviews = {setup: {id: "<%= @survey.id %>"}}
      setTimeout(() => {
        const event = new Event("survey.<%= @survey.id %>.display");
        window.dispatchEvent(event);
      }, 250);
    </script>
    <%= javascript_pack_tag 'embed', id: 'clientviews-js' %>
  </head>

  <body id="public">
    <div class="container" style="margin-top:6rem">
      <div class="row justify-content-center">
            <%= yield %>
      </div>
    </div>


  </body>
</html>
